---
import "@fontsource/spectral";

import "./styles.css";

interface Props {
	title: string;
}

const { title } = Astro.props;

const SEO = {
	description:
		"Abhishek jha, Full stack developer, Software engineer, Developer portfolio",
	keywords:
		"portfolio, javascript, developer, python, aws, full stack, frontend, backend, typescript, next, react",
	image: "/images/profile-photo-transparent.png",
};
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link
			rel="icon"
			type="image/svg+xml"
			href={SEO.image}
		/>
		<link
			rel="sitemap"
			href="/sitemap-index.xml"
		/>
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1, shrink-to-fit=no"
		/>
		<meta
			name="generator"
			content={Astro.generator}
		/>
		<meta
			name="description"
			content={SEO.description}
		/>
		<meta
			name="keyword"
			content={SEO.keywords}
		/>
		<meta
			property="og:title"
			content={title}
		/>
		<meta
			property="og:description"
			content={SEO.description}
		/>
		<meta
			property="og:image"
			content={SEO.image}
		/>
		<meta
			property="og:url"
			content="https://portfolio-e88.pages.dev"
		/>
		<meta
			property="og:type"
			content="website"
		/>
		<title>{title}</title>
	</head>
	<body>
		<div class="page-container">
			<slot />
		</div>
	</body>
</html>
